<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wordCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wordbg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/tiao" >

            <ProgressBar
                android:id="@+id/progressBar_get_Interperatatior"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/wordKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="about"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/word_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="3dip"
                    android:src="@drawable/wordclose" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/wordPron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dip"
                android:text="[sdasda]"
                android:textColor="@color/royalblue"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/wordSpeaker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dip"
                android:src="@drawable/spaker" />

            <Button
                android:id="@+id/add_word"
                android:layout_width="27dip"
                android:layout_height="29dip"
                android:background="@drawable/addword" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="100dip" 
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="5dip">

            <TextView
                android:id="@+id/wordDef"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"             
                android:text="dasdas"
                android:textColor="@color/royalblue"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>