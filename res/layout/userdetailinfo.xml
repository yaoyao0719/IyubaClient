<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebg" >

        <Button
            android:id="@+id/detailinfo_back_btn"
             android:layout_width="31.8dip"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详细资料"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="#4e5762"
                android:textSize="18sp" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_setting_panel_background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="登录名"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="姚瑶大坏蛋"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="性别"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="女"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="所在地"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvResideLocation"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="北京  海淀区"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="生日"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvBirthday"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="1989-07-19"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="生肖"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvZodiac"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="蛇"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="星座"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvConstellation"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="巨蟹座"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="邮箱"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="15063996133@163.com" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="教育信息"
                android:textColor="#4e5762"
                android:textSize="18sp" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_setting_panel_background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="大学"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvGraduatesSchool"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="山东科技大学"
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="公司"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="无"
                        android:textColor="#0e497b" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="#4e5762"
                android:textSize="18sp" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_setting_panel_background"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="情感状态"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvAffectivestatus"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="交友目的"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvLookingfor"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="自我介绍"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvBio"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#0e497b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="兴趣爱好"
                        android:textColor="#0e497b" />

                    <TextView
                        android:id="@+id/tvInterest"
                        android:layout_width="0dip"
                        android:layout_height="50dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#0e497b" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>