<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebg"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/blog_back_btn"
            android:layout_width="31.8dip"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/back"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:text="双语："
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </TextView>

        <Button
            android:id="@+id/blogcomments"
            android:layout_width="27dip"
            android:layout_height="28dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/icon_publish_mood" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/blog_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="center"
            android:text="哈哈"
            android:textColor="#000000"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/blog_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="哈哈"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.iyuba.iyubaclient.widget.TextPage.SubtitleSynView
            android:id="@+id/test"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dip"
            android:text="aaa"
            android:textColor="#0e497b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_interpertatior"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/wordbg"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dip"
            android:layout_marginTop="25dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/word_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="#0e497b"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/word_pron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="#0f3454"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/word_def"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/add_word_translate"
            android:layout_width="27dip"
            android:layout_height="29dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/addword" />

        <ProgressBar
            android:id="@+id/progressBar_get_Interperatatior"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="25dip" />
    </LinearLayout>

</RelativeLayout>