<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:gravity="center_vertical" xmlns:app="http://schemas.android.com/apk/res/com.iyuba.iyubaclient">

    <com.iyuba.iyubaclient.util.RoundAngleImageView
        android:id="@+id/messageletter_portrait"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:src="@drawable/defaultavatar"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="60dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip" >

            <TextView
                android:id="@+id/messageletter_username"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="爱语吧"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/messageletter_pmnum"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:text="[5]"
                android:textColor="#000000"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="03-13 17:52"
                android:textColor="#000000" 
                android:id="@+id/messageletter_dateline">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/messageletter_lastmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="今天天气不好今天天气不好今天天气不好今天天气不好"
                android:textColor="#808080" />

            <ImageView       
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_margin="5dip"
                android:background="@drawable/triangle"
                android:focusable="false"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>