<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.iyuba.iyubaclient"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:gravity="center_vertical" >

    <com.iyuba.iyubaclient.util.RoundAngleImageView
        android:id="@+id/guesslist_portrait"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultavatar" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dip"
           
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/guesslist_username"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="爱语吧"
                android:textColor="#000000"
                android:textSize="17sp" 
                android:gravity="center"/>

            <ImageView
                android:id="@+id/guesslist_gender"
                android:layout_width="22dip"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/user_info_male" />
        </LinearLayout>

        <TextView
            android:id="@+id/guesslist_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="今天天气不好"
            android:textColor="#0e497b" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center" >


        <ImageView
            android:layout_width="21dip"
            android:layout_height="21dip"
            android:layout_marginRight="10dip"
            android:focusable="false"
            android:src="@drawable/triangle" />
    </LinearLayout>

</LinearLayout>